<% if @book.errors.any? %>
	<h3><%= @book.errors.count %>error occurrence</h3><!--エラーメッセ-->
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>


<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
				 <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
				 <table class="table">
				 	<tbody>
				 		<tr>
				 			<td>
				 				<strong>name</strong>
				 			</td>
				 			<td><%= @user.name %></td>
				 		</tr>
				 		<tr>
				 			<td><strong>introduction</strong></td>
				 			<td><%= @user.introduction %></td>
				 		</tr>
				 	</tbody>
				 </table>
				 <div class="row">
					 	<% if @user.id == current_user.id %>
					        <%= link_to edit_user_path(@user), class: 'col-xs-12 btn btn-default btn-lg' do  %><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
					        <% end %>
					     <% end %>
				 </div>
			<h2>New Book</h2>
				<div class="row">
					<%= form_for(@book) do |f| %>
						<label>Title</label>
							<%= f.text_field :title, :class => "form-control" %>

						<label>Option</label>
							<%= f.text_area :option, :class => "form-control" %>

						<div class="actions">
		            		<%= f.submit "create book", :class => "btn btn-primary btn-sm btn-block" %>
        				</div>

					<% end %>
				</div>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th colspan="1"></th>
				<th>title</th>
				<th>option</th>
			</tr>
		</thead>
	<% @books.each do |book| %>
			<tbody>
				<tr>
					<td><%= attachment_image_tag( book.user, :image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
					<td> <%= link_to book.title, book_path(book.id) %>
					<td> <%= book.option %></td>
				</tr>
			</tbody>
	<% end %>
</table>
		</div>
	</div>
</div>