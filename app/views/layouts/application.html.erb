<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navar-nav navbar-left">
          <span style="color:white;">Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="">
               <%= link_to ' Home', user_path(current_user.id), :class => "glyphicon glyphicon-home" %>
              </li>
              <li class="">
               <%= link_to ' Users', users_path, :class => "glyphicon glyphicon-user" %>
              </li>
              <li class="">
               <%= link_to ' Books', books_path, :class => "glyphicon glyphicon-book" %>
              </li>
              <li class="">
                <%= link_to " logout", destroy_user_session_path, :class => "glyphicon glyphicon-log-out", method: :delete %>
              </li>
            <% else %>
              <li class="">
                <%= link_to " Home", home_path, :class => "glyphicon glyphicon-home" %>
              </li>
              <li class="">
               <%= link_to " about", home_about_path, :class => "glyphicon glyphicon-link" %>
              </li>
              <li class="">
                <%= link_to " sing up", new_user_registration_path, :class => "glyphicon glyphicon-home" %>
              </li>
              <li class="">
                <%= link_to " log in", new_user_session_path, :class => "glyphicon glyphicon-home" %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
</div>
    </header><!--
    main /header -->
    <main>
      <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
       <%= yield %>
    </main>
    <footer>
      <p  class="text-right">CopyRight Infratop.inc     </p>
    </footer>
  </body>
</html>

